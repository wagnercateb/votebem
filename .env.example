# Django Settings
DJANGO_SETTINGS_MODULE=votebem.settings.production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DB_NAME=votebem_db
DB_USER=votebem_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@votebem.com

# Security Settings
USE_HTTPS=False
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Remote Debugging (set to True for development)
ENABLE_REMOTE_DEBUG=False

# Social Authentication
# Google OAuth2 Settings
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth2 Settings
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Monitoring
SENTRY_DSN=your-sentry-dsn-here